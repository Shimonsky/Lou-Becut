<div class="mycontainer">
  <% @books.each do |book| %>
    <div class="card-product">
      <div class="books" style= 'url(<%= book.image_url %>)'>
        <h2><%= book.title %></h2>
        <%= book.author %>
        <%= book.genre %>
        <%= book.editor %>
      </div>
    </div>
  <% end %>
</div>